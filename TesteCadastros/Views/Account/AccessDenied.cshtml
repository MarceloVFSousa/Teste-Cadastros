@model TesteCadastros.ViewModels.AccessDeniedViewModel

@{
    ViewData["Title"] = "Acesso negado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center">@ViewData["Title"]</h2>
                <h3>Você não possui acesso a essa página.</h3>
                <h3>Para acessá-la, efetue login.</h3>                    
                    <a asp-action="Login">Voltar para Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
