@model TesteCadastros.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Redefinir senha";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center">@ViewData["Title"]</h2>
                <form asp-action="ResetPassword" method="post">
                    <input type="hidden" asp-for="Token" />
                    <input type="hidden" asp-for="Email" />

                    <div class="form-group">
                        <label for="Input_Password">Nova Senha</label>
                        <input asp-for="Password" class="form-control" placeholder="Digite sua nova senha" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Input_ConfirmPassword">Confirmar Senha</label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirme sua nova senha" required />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Redefinir Senha</button>
                </form>
                <hr>
                <div class="text-center">
                    <a asp-action="Login">Voltar para Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
